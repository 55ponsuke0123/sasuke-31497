<div class="registration-main">
  <div class=" form_wrap">
    <div class="form_header">
      <h1>ユーザー登録</h1>
    </div>
        
        <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
          <%#= render 'devise/shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">施設名(全角)</label>
      <span class="indispensable">任意</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :facility_name, class:"input-name", id:"facility-name", placeholder:"例) サスケ病院" %>
    </div>
  </div>
   <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">部署名(全角)</label>
      <span class="indispensable">任意</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :department_name, class:"input-name", id:"department-name", placeholder:"例) リハビリテーション部" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">セラピスト名(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :therapist_name, class:"input-name", id:"therapist-name", placeholder:"例) 田中太郎" %>
    </div>
  </div>
  <div class="form-group">
   <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <span class='info-text'>※英字と数字の両方を含めて設定してください</span>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
        <div class="actions">
          <%= f.submit "登録", class: :form_btn  %>
        </div>
        <div class='second-action'>
        <%=link_to "トップへ戻る", root_path, class: :top_btn%> 
        </div>
      <% end %>     
   </div>
</div>
